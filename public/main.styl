@import 'nib'

label
  margin-right 5px

.logo
  margin-right 1em
  margin-top 1em

#preview
  margin 1em
  img
    width 100%

#fb-root, #LikePluginPagelet
  display inline

form
  label
    text-align left



.fileinputs
  position relative

.fakefile
  position absolute
  top 25px
  left 0px
  z-index 1

.file
  position relative
  opacity 0
  z-index 2

#upload
  margin-top 1em



#drop_info_bg
  display none
  position absolute
  background-color black
  bottom 0px
  top 0px
  opacity 0.5
  height 100%
  width 100%
  z-index 100

#drop_info
  display none
  position absolute
  text-align center
  font-size 5em
  margin-top 30%
  color white
  height 100%
  width 100%
  z-index 1000


.black_overlay
  display none
  position absolute
  top 0%
  left 0%
  width 100%
  height 100%
  background-color black
  z-index1001
  -moz-opacity 0.8
  opacity.80

.white_content
  display none
  width 400px;
  position absolute
  top 25%
  left 25%
  padding 16px
  border 16px solid black
  border-radius 5px
  background-color white
  z-index 1002
  overflow auto
  .box_content
    margin 40px
  .close
    float right


